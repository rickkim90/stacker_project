<div class="contact section-invert py-4">
 <h2 class="section-title text-center m-5"><%= t(".sign_in") %></h2>
 <div class="container py-4">
   <div class="row justify-content-md-center px-4">
     <div class="contact-form col-sm-12 col-md-10 col-lg-7 p-4 mb-4 card">
       <form>
         <div class="row">
           <div class="col-md-6 col-sm-12">
             <div class="form-group">
               <label for="contactFormFullName">email</label>
               <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <%= f.input :email, required: false, autofocus: true , placeholder: "Enter your email address", class: "form-control"%>

               <label for="contactFormEmail">password</label>
               <%= f.input :password, required: false, placeholder: "Enter your password", class: "form-control" %>
             </div>
             <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
           </div>
         </div>
              <%= f.button :submit, t(".sign_in"), class: "btn btn-warning btn-pill d-flex ml-auto mr-auto"%>
              <% end %>
              <%= render "devise/shared/links" %>
       </form>
     </div>
   </div>
 </div>
</div>



