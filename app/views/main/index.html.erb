<header class="bg-white text-black">
  <div class="container text-center">
    <div class="justify-content-center">
        <!-- </form> -->
          <div class="col-sm">
          <h3>Git 트렌드</h3>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">No.</th>
                <th scope="col">Language</th>
                <th scope="col">Stars</th>
              </tr>
            </thead>
            <tbody>
              <% @gitdata.each do |git|%>
              <tr>
                <td><%= git.id %></td>
                <td><%= git.name %></td>
                <td><%= git.count %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</header>
